@model KursViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Kurs Güncelleme</h2>
<hr />

<div class="row">
    <div class="col-8">
        <form asp-controller="Kurs" asp-action="Edit" method="post">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="KursId" />
            <div class="mb-3">
                <label asp-for="Baslik" class="form-label">Kurs Adı</label>
                <input asp-for="Baslik" class="form-control" />
                <span asp-validation-for="Baslik"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
                <select asp-for="OgretmenId" asp-items="@ViewBag.selectListItems" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="OgretmenId"></span>
            </div>

            <button type="submit" class="btn btn-secondary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Öğrenciler</h4>
        <hr />
        <ul>
            @foreach(var item in Model.KursKayitlari)
            {
                <li>@item.Ogrenci.AdSoyad</li>
            }
        </ul>
    </div>
</div>
