@model IEnumerable<Ogrenci>
@{
    ViewData["Title"] = "Index";
}

<h2>Öğrenci Listesi</h2>
<hr />
<a href="/Ogrenci/Create" class="btn btn-primary">Öğrenci Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width:150px;">@Html.DisplayNameFor(t=>t.OgrenciId)</th>
            <th>@Html.DisplayNameFor(t=>t.OgrenciAd)</th>
            <th>@Html.DisplayNameFor(t=>t.OgrenciSoyad)</th>
            <th style="width:150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
                <td>@Html.DisplayFor(modelItem =>item.OgrenciId)</td>
                <td>@Html.DisplayFor(modelItem =>item.OgrenciAd)</td>
                <td>@Html.DisplayFor(modelItem =>item.OgrenciSoyad)</td>
                <td>
                    <a asp-controller="Ogrenci" asp-action="Edit" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-controller="Ogrenci" asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-danger">Delete</a>
                </td>
        </tr>
        }
    </tbody>

</table>

